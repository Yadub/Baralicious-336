.row.text-center.extramargin
  #content{style: "padding-top: 30px;"}
    .large-4.columns#beer
      %a{href: '#'}
        %h4 find beers
        %img{src: "/img/beer.png"}
    .large-4.columns#bar
      %a{href: '#'}
        %h4 find bars
        %img{src: "/img/bar.png"}
    .large-4.columns#friend
      %a{href: '#'}
        %h4 find friends
        %img{src: "/img/friends.png"}
.row.text-center
  .small-6.columns.small-centered
    %form#beers.hide{action: "/beers", method: "POST"}
      .row.extramargin
        .large-12.columns
          %input#in1{type: "text", placeholder: "Beer Name?", name: "beer"}
    %form#bars.hide{action: "/bars", method: "POST"}
      .row.extramargin
        .large-12.columns
          %input#in2{type: "text", placeholder: "Bar Name?", name: "bar"}
    %form#friends.hide{action: "/drinkers", method: "POST"}
      .row.extramargin
        .large-12.columns
          %input#in3{type: "text", placeholder: "Your Name?", name: "drinker"}
:javascript
  $(document).ready(function() {
    $('#beer').click(function() {
      $('#beers').show();
      $('#bars').hide();
      $('#friends').hide();
      $('#in1').keypress(function(e) {
        if (e.charCode == 13) {
        $('#beers').submit();
        }
      });
    });
    $('#bar').click(function() {
      $('#bars').show();
      $('#beers').hide();
      $('#friends').hide();
      $('#in2').keypress(function(e) {
        if (e.charCode == 13) {
        $('#bars').submit();
        }
      });
    });
    $('#friend').click(function() {
      $('#friends').show();
      $('#bars').hide();
      $('#beers').hide();
      $('#in3').keypress(function(e) {
        if (e.charCode == 13) {
        $('#friends').submit();
        }
      });
    });
    $('input#in1').typeahead({
      name: 'beer',
      prefetch: '/beers'
      });
    $('input#in2').typeahead({
      name: 'bar',
      prefetch: '/bars'
      });
    $('input#in3').typeahead({
      name: 'drinker',
      prefetch: '/drinkers'
      });
    });
