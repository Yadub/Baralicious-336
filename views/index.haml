.row.text-center.extramargin
  #content{style: "padding-top: 30px;"}
    .large-4.columns#beer
      %a{href: '#'}
        %h4 find beers
        %img{src: "/img/beer.png"}
    .large-4.columns#bar
      %a{href: '#'}
        %h4 find bars
        %img{src: "/img/bar.png"}
    .large-4.columns#friend
      %a{href: '#'}
        %h4 find friends
        %img{src: "/img/friends.png"}
.row.text-center
  .small-6.columns.small-centered
    %form#beers.hide
      .row.extramargin
        .large-12.columns
          %input#in1{type: "text", placeholder: "Beer Name?"}
    %form#bars.hide
      .row.extramargin
        .large-12.columns
          %input#in2{type: "text", placeholder: "Bar Name?"}
    %form#friends.hide{action: "/drinkers/eddie", method: "GET"}
      .row.extramargin
        .large-12.columns
          %input#in3{type: "text", placeholder: "Your Name?"}
:javascript
  $(document).ready(function() {
    $('#beer').click(function() {
      $('#beers').show();
      $('#bars').hide();
      $('#friends').hide();
      $('#in1').keypress(function(e) {
        if (e.charCode == 13) {
        var val = $('#in1').val();
        $('#beers').attr('action', '/beers/' + val);
        $('#beers').submit();
        }
      });
    });
    $('#bar').click(function() {
      $('#bars').show();
      $('#beers').hide();
      $('#friends').hide();
      $('#in2').keypress(function(e) {
        if (e.charCode == 13) {
        var val = $('#in2').val();
        $('#bars').attr('action', '/bars/' + val);
        $('#bars').submit();
        }
      });
    });
    $('#friend').click(function() {
      $('#friends').show();
      $('#bars').hide();
      $('#beers').hide();
      $('#in3').keypress(function(e) {
        if (e.charCode == 13) {
        var val = $('#in3').val();
        $('#friends').attr('action', '/drinkers/' + val);
        $('#friends').submit();
        }
      });
    });
    //$('input#in3').on('typeahead:autocompleted', function() {
    //  var val = $(this).val();
    //  $('#friends').attr('action', '/drinkers/' + val);
    //  $('#friends').submit();
    // });
    // $('input#in3').on('typeahead:selected', function() {
    //  var val = $(this).val();
    //  $('#friends').attr('action', '/drinkers/' + val);
    //  $('#friends').submit();
    // });
    $('input#in1').typeahead({
      name: 'beer',
      prefetch: '/beers'
      });
    $('input#in2').typeahead({
      name: 'bar',
      prefetch: '/bars'
      });
    $('input#in3').typeahead({
      name: 'drinker',
      prefetch: '/drinkers'
      });
    });
