.row
  .large-12.columns{style: "background-color: #FF7130;"}
    %h2= "<b>Beer name:</b> #{@beer.name}"
    %h3= "<b>Manufacturer:</b> #{@beer.manf}"

.row
  .large-5.columns{style: "background-color: #34CFBE;"}
    %h1 Where to buy #{@beer.name}:
    -@beer.sold_at.each do |bar|
      %h4{style: "color: black"}= link_to bar

  .large-5.columns{style: "background-color: #5DCFC3;"}
    %h1 People who like #{@beer.name}:
    -@beer.liked_by.each do |drinker|
      %h4{style: "color: black"}= link_to drinker
