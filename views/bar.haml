.row{style: "background-color: #FF7130;"}
  .large-8.columns
    %h3= "<b>name:</b> #{@bar.name}"
    %h3= "<b>phone:</b> #{@bar.phone}"
    %h3= "<b>address:</b> #{@bar.address}, #{@bar.city}"
    %h3= "<b>license:</b> #{@bar.license}"

.row
  .large-5.columns{style: "background-color: #5DCFC3;"}
    %h2 <b>Frequenters of #{@bar.name}:</b>
    -@bar.frequents.each do |drinker|
      %h5{style: "color: black;"}= drinker.name

  .large-5.columns{style: "background-color: #34CFBE;"}
    %h2 <b>#{@bar.name}'s beer menu:</b>
    -@bar.sells.each do |beer|
      %h5{style: "color: black;"} #{beer.name} $#{"%6.2f" % [beer.price_at(@bar)]}
